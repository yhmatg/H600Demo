<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/title_layout" />

        <TextView
            android:id="@+id/tv_spec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_layout"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="规格参数"
            android:textColor="@color/green_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_spec"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="序号"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_performance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_number"
            android:layout_centerHorizontal="true"
            android:text="性能指标"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_tec_para"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_number"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:text="技术参数"
            android:textSize="16sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_para"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_number"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp" />

        <TextView
            android:id="@+id/tv_precaution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rv_para"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/precaution_str"
            android:textColor="@color/green_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_prec_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_precaution"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:lineSpacingExtra="4dp"
            android:text="@string/prec_ont_str" />

        <TextView
            android:id="@+id/tv_warn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_prec_one"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/warn_str"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_warn_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_warn"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:lineSpacingExtra="4dp"
            android:text="@string/warn_ont_str" />

        <TextView
            android:id="@+id/tv_cure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_warn_one"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/cure_str"
            android:textColor="@color/green_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_cure_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_cure"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:lineSpacingExtra="4dp"
            android:text="@string/cure_one_str" />
    </RelativeLayout>
</ScrollView>