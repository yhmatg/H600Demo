<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <include layout="@layout/title_layout" />

    <Button
        android:id="@+id/bt_k"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_below="@+id/title_layout"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_background"
        android:text="@string/k_str"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/bt_t"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_below="@+id/title_layout"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/button_background"
        android:text="@string/t_str"
        android:textColor="@color/white" />


    <TextView
        android:id="@+id/tv_current_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_k"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/bt_report"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="当前选项：框"
        android:textSize="16sp" />

    <Button
        android:id="@+id/bt_report"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/bt_k"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:text="手动提交"
        android:textColor="@color/white"
        android:textSize="16sp" />


    <LinearLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_current_box"
        android:background="@color/grey"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="序号" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center"
            android:text="标签EPC" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="写入状态" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_write_epcs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_title"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="初始写入"
        android:textColor="@color/indicator_color"
        android:textSize="18sp" />
</RelativeLayout>